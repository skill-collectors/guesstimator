{
  "name": "guesstimator-infra",
  "scripts": {
    "check-all": "npm run check-types && npm run lint &&  npm run test",
    "check-types": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "prettier --ignore-path .gitignore --check . && eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.148",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.777.0",
    "@aws-sdk/client-dynamodb": "^3.777.0",
    "@aws-sdk/lib-dynamodb": "^3.778.0",
    "@pulumi/aws": "^6.74.0",
    "@pulumi/aws-apigateway": "^2.6.2",
    "@pulumi/pulumi": "^3.159.0",
    "typescript": "^5.8.2"
  }
}
