{
  "name": "guesstimator-infra",
  "scripts": {
    "check-all": "npm run check-types && npm run lint &&  npm run test",
    "check-types": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "vitest": "^0.34.4"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.319.0",
    "@aws-sdk/client-dynamodb": "^3.468.0",
    "@pulumi/aws": "^5.35.0",
    "@pulumi/aws-apigateway": "^1.0.0",
    "@pulumi/pulumi": "^3.92.0"
  }
}
