{
  "name": "guesstimator-infra",
  "scripts": {
    "check-all": "npm run check-types && npm run lint &&  npm run test",
    "check-types": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "vitest": "^1.1.1"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.319.0",
    "@aws-sdk/client-dynamodb": "^3.494.0",
    "@aws-sdk/lib-dynamodb": "^3.504.0",
    "@pulumi/aws": "^6.19.0",
    "@pulumi/aws-apigateway": "^2.1.0",
    "@pulumi/pulumi": "^3.95.0"
  }
}
