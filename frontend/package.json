{
  "name": "guesstimator-frontend",
  "version": "0.0.1",
  "scripts": {
    "check-all": "npm run check && npm run lint && npm run test:unit && npm run test:e2e",
    "build": "vite build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dev": "vite dev",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "lint": "prettier --ignore-path .gitignore --check . && eslint --ignore-path .gitignore .",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.6",
    "@testing-library/user-event": "^14.4.3",
    "@types/qrcode": "^1.5.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^8.17.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.46.1",
    "happy-dom": "^15.11.7",
    "postcss": "^8.4.40",
    "prettier": "^3.4.1",
    "prettier-plugin-svelte": "^3.3.2",
    "svelte": "^4.2.19",
    "svelte-check": "^3.6.9",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.16",
    "tslib": "^2.8.1",
    "typescript": "~5.7.2",
    "vite": "^5.3.4",
    "vite-plugin-windicss": "^1.9.4",
    "vitest": "^2.1.8"
  },
  "type": "module",
  "dependencies": {
    "chartist": "^1.3.0",
    "qrcode": "^1.5.3",
    "svelte-confetti": "^1.4.0",
    "tailwindcss-animated": "^1.1.1"
  }
}
